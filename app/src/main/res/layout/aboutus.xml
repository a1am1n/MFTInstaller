<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#494949"
        android:text="MTLFREETV.COM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="18dp"
        android:textColor="#494949"
        android:text="The Future of Television"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:padding="12dp"
        android:id="@+id/txtContact"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="#0a7ea4"
        android:text="Contact Us (Suggestions/Bugs/Inquiries)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:padding="12dp"
        android:id="@+id/youtube"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="#0a7ea4"
        android:text="YouTube Channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:padding="12dp"
        android:id="@+id/txtvpn"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="#0a7ea4"
        android:text="VPN Services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:padding="12dp"
        android:id="@+id/txtinst"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="#0a7ea4"
        android:text="Instructions (Video)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
